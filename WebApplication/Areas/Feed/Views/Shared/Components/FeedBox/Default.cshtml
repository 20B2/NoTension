@using WebApplication.Core.Domains.Feed
@using WebApplication.Core.Domains.StatusType

@model List<FeedItem>

@{ 
    var StatusTypes = ViewBag.StatusType as List<StatusType>;
}

@foreach (var item in Model)
{

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="row tn-feed-row">
            <ul class="tn-feed-data list-inline">
                <li>
