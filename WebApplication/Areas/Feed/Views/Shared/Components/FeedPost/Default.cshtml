@model WebApplication.Infrastructure.ViewModels.FeedViewModels.FeedPostViewModel

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-area="Feed" asp-controller="Feed" asp-action="PublishedPost" method="post">
                <div class="row tn-post-row">
                    <div class="col-md-1">
                        <div class="tn-profile-photo">

                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="tn-post-textarea">
                            <textarea asp-for="Text" class="tn-textarea" placeholder="Whats on your mind?">
                        
                        </textarea>
                            
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        @*<div class="tn-upload">
                        <input type="file" name="name" value="" />
                    </div>*@
                        <div class="tn-post-type-selection">

                            <span>
                                <select asp-for="StatusType" asp-items="@(new SelectList(@ViewBag.StatusType,"Id","TypeName") )">
                                    <option selected disabled>
                                        Problem Type
                                    </option>
                                </select>
                                <span asp-validation-for="StatusType" class="text-danger"></span>
                            </span>
                        </div>
                    </div>


                </div>
                <ul class="tn-add-info">
                    <li>
                        <a href="javascript:;" data-toggle="tooltip" data-placement="bottom" title="Add Photo">
                            <i class="fa fa-file-photo-o">

                            </i>
                            <input type="file" name="name" value="" class="hidden" />
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="tooltip" data-placement="bottom" title="Add Location">
                            <i class="fa fa-location-arrow"></i>
                        </a>
                    </li>
                    <li class="pull-right">
                        <button type="submit"> Post</button>
                    </li>
                </ul>
                </form>
                </div>
        <div class="col-md-3"></div>
    </div>
