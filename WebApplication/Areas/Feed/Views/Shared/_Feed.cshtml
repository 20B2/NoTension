@using WebApplication.Infrastructure.ViewModels.FeedViewModels
@model FeedViewModel
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="row tn-feed-row">
            <ul class="tn-feed-data list-inline">
                @*<li>
                        <a asp-action="Edit" asp-route-id="Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@Model.Feed">Details</a> |
                        <a asp-action="Delete" asp-route-id="@Model.Feed">Delete</a>
                    </li>*@
                <li>

                    @Model.StatusType
                </li>
                <div class="pull-right">
                    <li>
                        @Model.UpdatedAgo
                    </li>

                </div>

            </ul>
            <div class="tn-post-text">
                <div class="row">
                    <div class="col-md-2">

                    </div>
                    @*status area*@
                    <div class="col-md-10">
                        <div class="tn-status-text">
                            @Model.Text
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <ul class="tn-feed-data-footer list-inline">
            <li>
                <span>
                  
                    @Model.Likes  Likes
                </span>
            </li>

           @foreach(var item in Model.Comments)
           {

               @Html.Partial("_comments",item)
               

           }

            <li>

                @Model.CommentsCounts Comments || @Model.Comments.Count.ToString()

                @Model.UpdatedAgo 
            </li>

        </ul>
    </div>
    <div class="col-md-3"></div>
</div>